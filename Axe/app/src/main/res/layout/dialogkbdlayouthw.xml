<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/Root"
    >
	<LinearLayout 
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:orientation="horizontal"
                android:gravity="center_vertical"
 	>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                    android:text="@string/Label_AltGr"
            />
            <RadioGroup
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:id="@+id/rgAltGr"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
            >
                <RadioButton
                    android:id="@+id/rbAltGrNo"
                    android:text="@string/Label_AltGrNo"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                />
                <RadioButton
                    android:id="@+id/rbAltGrRightAlt"
                    android:text="@string/Label_AltGrRightAlt"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                />
                <RadioButton
                    android:id="@+id/rbAltGrLeftAlt"
                    android:text="@string/Label_AltGrLeftAlt"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                />
                <RadioButton
                    android:id="@+id/rbAltGrRightShift"
                    android:text="@string/Label_AltGrRightShift"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                />
            </RadioGroup>
	</LinearLayout> 
	<LinearLayout 
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:orientation="horizontal"
                android:gravity="center_vertical"
 	>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
                android:text="@string/Label_OpenIMKey"
        />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/rgIMKey"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
        >
            <RadioButton
                android:id="@+id/rbIMKeyNo"
                android:text="@string/Label_IMKeyNone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
            />
            <RadioButton
                android:id="@+id/rbIMKeyZenHan"
                android:text="@string/Label_IMKeyZenHan"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
            />
            <RadioButton
                android:id="@+id/rbIMKeyOther"
                android:text="@string/Label_IMKeyOther"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
            />
        </RadioGroup>
        <LinearLayout
             android:layout_height="fill_parent"
             android:layout_width="wrap_content"
             android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#fff0f0f0"
            android:layout_marginLeft="5dp"
        >
            <EditText
                android:id="@+id/etIMKey"           
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                    android:clickable="false"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                android:textColor="#ff000000"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:nextFocusForward="@+id/etSoftKbd"
                android:nextFocusDown="@+id/etSoftKbd"
            />
        </LinearLayout>
	</LinearLayout> 
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="1dp"
         android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
        android:background="@color/separater"
             android:id="@+id/DummyFocus"
    />  <!--dummy for avaoid ime popup;and requestFocus on Name field was comment outed-->
	<LinearLayout 
		 android:layout_width="fill_parent"
		 android:layout_height="36dp"
		 android:orientation="horizontal"
                android:gravity="center_vertical"
 	>
        <Spinner
             android:id="@+id/Spinner"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
              android:background="#ffffffff"
              android:textColor="#ff000000"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
        />
        <TextView
             android:layout_height="fill_parent"
             android:layout_width="wrap_content"
              android:textColor="#ffffffff"
              android:text="@string/Label_KbdSpinner"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
        />
        <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:orientation="horizontal"
             android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
        >
            <Button
                android:id="@+id/Delete"                   
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="@string/Delete"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
            />
            <Button
                android:id="@+id/SoftKbd"                   
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:text="@string/Label_OpenSoftKbd"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
             		android:layout_marginLeft="10dp"
            />
            <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:orientation="horizontal"
    	     android:layout_weight="1"
             		android:layout_marginLeft="20dp"
            >
                <LinearLayout
                     android:layout_height="fill_parent"
                     android:layout_width="wrap_content"
                     android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="#fff0f0f0"
                >
                    <EditText
                        android:id="@+id/etSoftKbd"           
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                            android:clickable="false"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                        android:textColor="#ff000000"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@drawable/et_cursor"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:nextFocusForward="@+id/etSoftKbd"
                        android:nextFocusDown="@+id/etSoftKbd"
                    />
                   <!-- android:imeOptions="ationDone"-->
                   <!-- android:imeOptions="actionSend"-->
                </LinearLayout>
            <!--
                <LinearLayout
                        android:id="@+id/LLHardKbd"           
                     android:layout_height="fill_parent"
                     android:layout_width="wrap_content"
                     android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="#ffffff00"
                 android:layout_marginLeft="40dp"
                 android:visibility="gone"
                >
                    <EditText
                        android:id="@+id/etHardKbd"           
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                            android:clickable="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                        android:textColor="#ff000000"
                        android:cursorVisible="true"
                        android:textCursorDrawable="@drawable/et_cursor"
                    />
                </LinearLayout>
            -->
            </LinearLayout>
        <!--        	android:visibility="invisible"-->
        </LinearLayout>
	</LinearLayout> 
    <include layout="@layout/listrowkbdlayouthw_hdr"
    />
	<LinearLayout 
		 android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
	      android:background="#ff404040"
		 android:orientation="vertical"
         android:layout_weight="1"
	>
        <ListView
            android:id="@+id/List"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
        />
    </LinearLayout>
    <LinearLayout
         android:id="@+id/DialogButtons"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="2px"
         android:layout_alignParentBottom="true"
    >
        <Button
            android:id="@+id/Close"                        
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:text="@string/OK"
            android:layout_gravity="center_vertical"
        />
        <Button
            android:id="@+id/Reset"                        
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:text="@string/ResetKbdLayout"
            android:layout_gravity="center_vertical"
        />
        <Button
            android:id="@+id/Cancel"                       
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:text="@string/Cancel"
            android:layout_gravity="center_vertical"
        />
        <Button
            android:id="@+id/Help"                       
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:text="@string/Help"
            android:layout_gravity="center_vertical"
        />
    </LinearLayout>
</LinearLayout>
