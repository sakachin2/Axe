<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
            <TextView
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/media_title_height"
                android:id="@+id/MediaTitle"
				android:background="#ffc0c000"
				android:textColor="#f0000000"
				android:maxLines="1"
            />                                         
            <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="1dp"
                 android:orientation="horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
				android:background="#ff000000"
            />  <!--dummy to avoid focus to button-->
            <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                android:id="@+id/LLMedia"
		        android:orientation="vertical"
				android:background="#ffc0c000"
				android:gravity="center"
		                     android:layout_weight="1"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
            >                                             
            <!--
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
            -->
    <!--Image  -->
                <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                    android:id="@+id/MediaImage"               
                    android:visibility="gone"
                />                                         
    <!--Video  -->
            <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                android:id="@+id/LLMediaVideo"               
		        android:orientation="vertical"
                    android:visibility="gone"
            >
                <VideoView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                    android:id="@+id/MediaVideo"               
                />                                         
                <TextView
                     android:layout_width="match_parent"
                     android:layout_height="2dp"
                    android:id="@+id/tvVideoMCAnchor"
                />                         
                <LinearLayout
                     android:layout_width="match_parent"
                             android:layout_height="match_parent"
                    android:id="@+id/LLVideoMC"       
                    android:orientation="vertical"
                        android:background="#ffc0c000"
                >
                    <LinearLayout
                         android:orientation="vertical"
                             android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                            android:id="@+id/LLVideoMCAnchorAdd"
                    />
                </LinearLayout>
